# Development environment variables
NODE_ENV=development

# Database URLs
DATABASE_URL=postgresql://postgres:password@localhost:5432/certificate_db
AUTH_DATABASE_URL=postgresql://postgres:password@localhost:5432/auth_db
UNIVERSITY_DATABASE_URL=postgresql://postgres:password@localhost:5433/university_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# Service URLs (for local development)
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
UNIVERSITY_SERVICE_URL=http://localhost:3002
CERTIFICATE_SERVICE_URL=http://localhost:3003
VERIFICATION_SERVICE_URL=http://localhost:3004
FILE_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006

# Frontend URLs
STUDENT_PORTAL_URL=http://localhost:4002
EMPLOYER_PORTAL_URL=http://localhost:4003
ADMIN_DASHBOARD_URL=http://localhost:4001

# Crypto Configuration
RSA_KEY_SIZE=2048
HASH_ALGORITHM=sha256

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4001,http://localhost:4002,http://localhost:4003